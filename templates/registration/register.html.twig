{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block navbar %}
{% endblock %}
{% block body %}
    <style>
        .container {
            width: 100%;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }


        .form {
            width: 400px;
            padding: 40px;
            background: rgba(255, 255, 255, 0.19);
            border-radius: 16px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(5px);
            -webkit-backdrop-filter: blur(5px);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 30px;
            text-align: center;
            color: #333;
        }

        .email-input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }
        .Password-input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
            margin-top:10px;
        }

        .checkbox-label {
            font-size: 16px;
            color: #333;
        }

        .checkbox-input {
            margin: 10px;
        }

        
 
        button[type="submit"] {
            cursor: pointer;
            display: block;
            width: 100%;
            background-color: #885cc3;
            color: #fff;
            font-size: 1.2rem;
            border: none;
            border-radius: 16px;
            padding: 15px;
            margin-top: 20px;
            transition: background-color 0.3s ease;
        }

        button[type="submit"]:hover {
            background-color: #333;
        }

        @media (max-width: 768px) {
            form {
                width: 90%;
            }
        }
    </style>

    <div class="container"style="position: relative;">
        <div class="form">
            <h1>Inscription</h1>

            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email, {'label': false, 'attr': {'placeholder': 'Email', 'class': 'email-input'}}) }}
                {{ form_widget(registrationForm.email) }}


                {{ form_row(registrationForm.plainPassword, {'label': false, 'attr': {'placeholder': 'Password', 'class': 'Password-input'}}) }}
                    {{ form_widget(registrationForm.plainPassword) }}

                {{ form_row(registrationForm.agreeTerms, {'label_attr': {'class': 'checkbox-label'}, 'attr': {'class': 'checkbox-input'}}) }}

                <button type="submit">Envoyer</button>
            
            {{ form_end(registrationForm) }}
        </div>
        <img src="media/vue-3d-homme-affaires.png" alt="" style="width:600px;height:700px;float:right;">

    </div>
{% endblock %}

