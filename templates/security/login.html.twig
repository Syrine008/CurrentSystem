{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block navbar %}
{% endblock %}
{% block body %}
<style>

.container {
    width: 100%;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    }
h1 {
    font-size: 2.5rem;
    margin-bottom: 30px;
    text-align: center;
    color: #333;
}
form {
    width: 400px;
    padding: 40px;
    background: rgba(255, 255, 255, 0.19);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.3);
}

input[type="email"] {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-sizing: border-box;
}
input[type="password"] {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-sizing: border-box;
    margin-top:10px;
}
button[type="submit"] {
    cursor: pointer;
    display: block;
    width: 100%;
    background-color: #885cc3;
    color: #fff;
    font-size: 1.2rem;
    border: none;
    border-radius: 16px;
    padding: 15px;
    margin-top: 20px;
    transition: background-color 0.3s ease;
}
button[type="submit"]:hover {
    background-color: #333;
}

@media (max-width: 768px) {
    form {
        width: 90%;
    }
}

/* Style the error message */
.alert {
    color: #721c24; /* Error message text color */
    background-color: #f8d7da; /* Error message background color */
    border: 1px solid #f5c6cb; /* Error message border color */
    padding: 10px;
    margin-bottom: 20px;
}
.sign{
     text-align: center;
     display: inline;
}

</style>
<div class="container">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="w-4/5 m-auto text-center">
        <div class="py-12 border-b border-gray-200">
            <h1>
                WELCOME
            </h1>
    
            <input 
                type="email" 
                value="{{ last_username }}" 
                name="email" 
                id="inputEmail" 
                class="bg-white" 
                placeholder="Email"
                autocomplete="email" 
                required 
                autofocus
            >

            <input 
                type="password" 
                name="password" 
                id="inputPassword" 
                class="bg-white" 
                autocomplete="current-password" 
                placeholder="Password"
                required
            >

            <input 
                type="hidden" 
                name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            <button type="submit">
                Log in
            </button>
        
        </div>
    </div>
    <div class="sign">
        <p>Pas de compte ?<a class="nav-link" href="{{path('app_register')}}">Sign Up</a></p>
    </div>
</form>
</div>
{% endblock %}
